<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_fleet_monitoring_checklist_motor" model="ir.actions.act_window">
        <field name="name">Motorcycle Checklists</field>
        <field name="res_model">fleet_monitoring.checklist.motor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat checklist motor baru.
            </p>
        </field>
    </record>

    <record id="view_fleet_monitoring_checklist_motor_tree" model="ir.ui.view">
        <field name="name">fleet_monitoring.checklist.motor.tree</field>
        <field name="model">fleet_monitoring.checklist.motor</field>
        <field name="arch" type="xml">
            <tree string="Motorcycle Checklists">
                <field name="name"/>
                <field name="date"/>
                <field name="driver_id"/>
                <field name="vehicle_id"/>
                <field name="is_roadworthy"/>
            </tree>
        </field>
    </record>

    <record id="view_fleet_monitoring_checklist_motor_form" model="ir.ui.view">
        <field name="name">fleet_monitoring.checklist.motor.form</field>
        <field name="model">fleet_monitoring.checklist.motor</field>
        <field name="arch" type="xml">
            <form string="Motorcycle Checklist">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Misal: Revo L 3571 LK - 10 Nov"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="driver_id"/>
                            <field name="vehicle_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    
                    <group string="A. Pemeriksaan Teknis">
                        <field name="oil" widget="radio" options="{'horizontal': true}"/>
                        <field name="fuel" widget="radio" options="{'horizontal': true}"/>
                        <field name="brakes" widget="radio" options="{'horizontal': true}"/>
                        <field name="light_front" widget="radio" options="{'horizontal': true}"/>
                        <field name="light_back" widget="radio" options="{'horizontal': true}"/>
                        <field name="light_head" widget="radio" options="{'horizontal': true}"/>
                        <field name="horn" widget="radio" options="{'horizontal': true}"/>
                        <field name="wheels" widget="radio" options="{'horizontal': true}"/>
                        <field name="chain" widget="radio" options="{'horizontal': true}"/>
                        <field name="mirror" widget="radio" options="{'horizontal': true}"/>
                        <field name="box_key" widget="radio" options="{'horizontal': true}"/>
                        <field name="stand" widget="radio" options="{'horizontal': true}"/>
                        <field name="starter" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <group string="B. Kelengkapan dan Dokumen">
                        <field name="stnk_tax" widget="radio" options="{'horizontal': true}"/>
                        <field name="stnk" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    
                    <group string="C. Catatan Tambahan/Masalah yang Ditemukan">
                        <field name="notes" nolabel="1" placeholder="Isi jika ada masalah atau temuan..."/>
                    </group>
                    
                    <group string="D. Pernyataan Pengguna">
                        <p>Saya menyatakan bahwa kendaraan telah saya periksa dalam kondisi:</p>
                        <field name="is_roadworthy" nolabel="1" widget="radio" options="{'horizontal': true}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>