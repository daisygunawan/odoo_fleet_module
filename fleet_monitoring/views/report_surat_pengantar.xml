<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_surat_pengantar" model="ir.actions.report">
        <field name="name">Surat Pengantar (Service)</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fleet_monitoring.report_surat_pengantar_template</field>
        <field name="report_file">fleet_monitoring.report_surat_pengantar_template</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_surat_pengantar_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center" style="border-bottom: 2px solid black; margin-bottom: 20px;">
                            <h2>SURAT PENGANTAR KENDARAAN</h2>
                            <p><strong>No: </strong> <span t-field="o.name"/></p>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Kepada Yth,</strong><br/>
                                <span t-field="o.partner_id.name"/><br/>
                                <span t-field="o.partner_id.street"/>
                                <span t-field="o.partner_id.city"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Tanggal:</strong> <span t-field="o.scheduled_date" t-options='{"widget": "date"}'/><br/>
                                <strong>No. SPK:</strong> <span t-field="o.spk_no"/>
                            </div>
                        </div>

                        <div class="mt-4">
                            <p>Mohon diterima kendaraan perusahaan kami untuk keperluan service/perbaikan dengan detail sebagai berikut:</p>
                        </div>

                        <table class="table table-bordered mt-3">
                            <tr>
                                <th style="width: 30%;">Nopol Kendaraan</th>
                                <td><span t-field="o.vehicle_id.license_plate_new"/></td>
                            </tr>
                            <tr>
                                <th>Jenis / Tahun</th>
                                <td><span t-field="o.vehicle_type"/> / <span t-field="o.vehicle_year"/></td>
                            </tr>
                            <tr>
                                <th>Nama Pengemudi</th>
                                <td><span t-field="o.driver_id.name"/></td>
                            </tr>
                            <tr>
                                <th>Rute / Tujuan</th>
                                <td><span t-field="o.rute"/></td>
                            </tr>
                        </table>

                        <div class="mt-4">
                            <strong>Keterangan / Keluhan:</strong><br/>
                            <p t-field="o.note" style="border: 1px solid #ccc; padding: 10px; min-height: 50px;"/>
                        </div>

                        <div class="row mt-5" style="page-break-inside: avoid;">
                            <div class="col-4 text-center">
                                <p>Pengirim (Admin)</p>
                                <br/><br/><br/>
                                <p>(_________________)</p>
                            </div>
                            <div class="col-4 text-center">
                                <p>Pengemudi</p>
                                <br/><br/><br/>
                                <p>( <span t-field="o.driver_id.name"/> )</p>
                            </div>
                            <div class="col-4 text-center">
                                <p>Penerima (Vendor)</p>
                                <br/><br/><br/>
                                <p>(_________________)</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>