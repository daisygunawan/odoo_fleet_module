<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_fleet_monitoring_checklist_car" model="ir.actions.act_window">
        <field name="name">Driver (Car) Checklists</field>
        <field name="res_model">fleet_monitoring.checklist.car</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat checklist sopir (mobil) baru.
            </p>
        </field>
    </record>

    <record id="view_fleet_monitoring_checklist_car_tree" model="ir.ui.view">
        <field name="name">fleet_monitoring.checklist.car.tree</field>
        <field name="model">fleet_monitoring.checklist.car</field>
        <field name="arch" type="xml">
            <tree string="Driver (Car) Checklists">
                <field name="name"/>
                <field name="date"/>
                <field name="driver_id"/>
                <field name="vehicle_id"/>
                <field name="is_roadworthy"/>
            </tree>
        </field>
    </record>

    <record id="view_fleet_monitoring_checklist_car_form" model="ir.ui.view">
        <field name="name">fleet_monitoring.checklist.car.form</field>
        <field name="model">fleet_monitoring.checklist.car</field>
        <field name="arch" type="xml">
            <form string="Driver (Car) Checklist">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Misal: Avanza L 1234 ABC - 10 Nov"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="driver_id"/>
                            <field name="vehicle_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    
                    <group string="A. Pemeriksaan Eksterior &amp; Mesin">
                        <field name="body" widget="radio" options="{'horizontal': true}"/>
                        <field name="tires" widget="radio" options="{'horizontal': true}"/>
                        <field name="spare_tire" widget="radio" options="{'horizontal': true}"/>
                        <field name="lights_head" widget="radio" options="{'horizontal': true}"/>
                        <field name="lights_brake" widget="radio" options="{'horizontal': true}"/>
                        <field name="wiper" widget="radio" options="{'horizontal': true}"/>
                        <field name="horn" widget="radio" options="{'horizontal': true}"/>
                        <field name="engine_oil" widget="radio" options="{'horizontal': true}"/>
                        <field name="radiator_water" widget="radio" options="{'horizontal': true}"/>
                        <field name="accu" widget="radio" options="{'horizontal': true}"/>
                        <field name="safety_belt" widget="radio" options="{'horizontal': true}"/>
                        <field name="windshield" widget="radio" options="{'horizontal': true}"/>
                        <field name="brake" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    
                    <group string="B. Perlengkapan Wajib">
                        <field name="stnk" widget="radio" options="{'horizontal': true}"/>
                        <field name="kir" widget="radio" options="{'horizontal': true}"/>
                        <field name="triangle" widget="radio" options="{'horizontal': true}"/>
                        <field name="first_aid" widget="radio" options="{'horizontal': true}"/>
                        <field name="jack" widget="radio" options="{'horizontal': true}"/>
                        <field name="fire_extinguisher" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    
                    <group string="C. Catatan Tambahan/Masalah yang Ditemukan">
                        <field name="notes" nolabel="1" placeholder="Isi jika ada masalah atau temuan..."/>
                    </group>
                    
                    <group string="D. Pernyataan Sopir">
                        <p>Saya menyatakan bahwa kendaraan telah saya periksa dalam kondisi:</p>
                        <field name="is_roadworthy" nolabel="1" widget="radio" options="{'horizontal': true}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>